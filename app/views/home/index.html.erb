
<h1 class="text-3xl font-bold text-center my-8">Articles</h1>

<% @articles.each do |article| %>
  <div class="article bg-white shadow-md rounded-lg p-6 mb-6">
    <h2 class="text-2xl font-semibold mb-2 text-gray-800"><%= article.title %></h2>
    <p class="text-gray-600 mb-4"><%= article.description %></p>
    <% if article.content&.photo&.attached? %>
  <%= image_tag url_for(article.content.photo), class: "w-full h-64 object-cover rounded-md" %>
<% end %>
  </div>
<% end %>
