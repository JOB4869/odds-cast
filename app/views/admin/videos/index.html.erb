<div class="container mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-4">Videos</h1>
  <div class="mb-4">
    <%= link_to "New Video", new_admin_video_path, class: "px-4 py-2 bg-blue-500 text-white rounded shadow hover:bg-blue-600" %>
  </div>
  <table class="table-auto w-full border-collapse border border-gray-300">
    <thead>
      <tr class="bg-gray-100">
        <th class="border border-gray-300 px-4 py-2">Title</th>
        <th class="border border-gray-300 px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @videos.each do |video| %>
        <tr>
          <td class="border border-gray-300 px-4 py-2"><%= video.title %></td>
          <td class="border border-gray-300 px-4 py-2 space-x-2">
            <%= link_to "Show", admin_video_path(video), class: "text-blue-500 hover:underline" %>
            <%= link_to "Edit", edit_admin_video_path(video), class: "text-yellow-500 hover:underline" %>
            <%= link_to "Delete", admin_video_path(video), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
