<div class="container mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-4"><%= @video.title %></h1>
  <div class="bg-white shadow-md rounded p-6">
    <p class="text-gray-700 mb-4"><strong>Description:</strong> <%= @video.description %></p>
    
    <% if @video.cover.attached? %>
      <div class="mb-4">
        <%= image_tag @video.cover, class: "max-w-full h-auto rounded" %>
      </div>
    <% end %>
    
    <% if @video.video_url.present? %>
      <div class="mb-4">
        <video controls class="max-w-full h-auto rounded">
          <source src="<%= @video.video_url %>" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      </div>
    <% else %>
      <p class="text-gray-700">No video available.</p>
    <% end %>

    <div class="space-x-2">
      <%= link_to "Edit", edit_admin_video_path(@video), class: "px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600" %>
      <%= link_to "Back", admin_videos_path, class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
    </div>
  </div>
</div>
