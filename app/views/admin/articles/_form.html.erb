<%= form_with(model: admin_article, html: { class: 'max-w-xl mx-auto p-6 bg-white rounded-lg shadow-lg' }) do |form| %>
  <% if admin_article.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 mb-6 rounded">
      <h2 class="text-lg font-semibold"><%= pluralize(admin_article.errors.count, "error") %> prohibited this admin_article from being saved:</h2>
      <ul class="mt-2">
        <% admin_article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- ฟอร์มสำหรับ Content -->
  <%= form.fields_for :content do |content_form| %>
    <div class="mb-4">
      <%= content_form.label :title, class: 'block text-sm font-semibold text-gray-700' %>
      <%= content_form.text_field :title, class: 'mt-1 p-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div class="mb-4">
      <%= content_form.label :description, class: 'block text-sm font-semibold text-gray-700' %>
      <%= content_form.text_area :description, class: 'mt-1 p-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div class="mb-4">
      <%= content_form.label :photo, class: 'block text-sm font-semibold text-gray-700' %>
      <%= content_form.file_field :photo, class: 'mt-1 p-2 w-full border border-gray-300 rounded-lg' %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= form.submit 'Submit', class: 'bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>
<% end %>
